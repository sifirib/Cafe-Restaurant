extends ../../layouts/LayoutTheme
include ../../mixins/dashboard/common
include ../../mixins/e-commerce/OrderTable

block content
  .pb-5
    .row.align-items-center.justify-content-between.g-3.mb-4
      .col-auto
        h2.mb-0 Orders
      .col-auto
        .d-flex.align-items-center
          button.btn.btn-link.text-900.me-1
            span.fas.fa-cloud-download-alt.fs--1.me-2
            | Export
          button.btn.btn-primary
            span.fas.fa-plus.me-2
            | Add order
    ul.nav.nav-links.mb-2.mx-n2
      li.nav-item
        a.nav-link.active(aria-current='page', href='#')
          | All 
          span.text-700.fw-semi-bold (68817)
      li.nav-item
        a.nav-link(href='#')
          | Pending payment 
          span.text-700.fw-semi-bold (6)
      li.nav-item
        a.nav-link(href='#')
          | Unfulfilled 
          span.text-700.fw-semi-bold (17)
      li.nav-item
        a.nav-link(href='#')
          | Completed
          span.text-700.fw-semi-bold (6,810)
      li.nav-item
        a.nav-link(href='#')
          | Refunded
          span.text-700.fw-semi-bold (8)
      li.nav-item
        a.nav-link(href='#')
          | Failed
          span.text-700.fw-semi-bold (2)

    #orderTable(data-list!={
      valueNames: ["order", "total", "customer", "payment_status", "fulfilment_status", "delivery_type", "date"],
      page: 10,
      pagination: true
    })
      .mb-4
        .row.g-2
          .col.col-xl-auto
            +Search({placeholder: 'Search orders', inputClass: ''}).w-100(style='max-width:30rem;')
          .col-auto.scrollbar.overflow-hidden-y
            .btn-group.position-static(role='group')
              .btn-group.position-static
                button.btn.btn-sm.btn-phoenix-secondary.px-7.flex-shrink-0(type='button', data-bs-toggle='dropdown', data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent") 
                  | Payment status
                  span.fas.fa-angle-down.ms-2
                ul.dropdown-menu.dropdown-menu-end
                  li
                    a.dropdown-item(href='#') Action
                  li
                    a.dropdown-item(href='#') Another action
                  li
                    a.dropdown-item(href='#') Something else here
                  li
                    hr.dropdown-divider
                  li
                    a.dropdown-item(href='#') Separated link
              .btn-group.position-static
                button.btn.btn-sm.btn-phoenix-secondary.px-7.flex-shrink-0(type='button', data-bs-toggle='dropdown', data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent") 
                  | Fulfilment status
                  span.fas.fa-angle-down.ms-2
                ul.dropdown-menu.dropdown-menu-end
                  li
