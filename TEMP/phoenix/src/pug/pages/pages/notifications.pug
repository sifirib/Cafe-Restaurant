mixin NotificationItem(info)
  .row.align-items-md-center.mb-4.g-3
    .col-auto
      +Avatar({size: 'xl', img: info.avatar, round: 'circle'})
    .col-auto.flex-1
      .row.justify-content-sm-between.align-items-center
        .col-md-auto.col-12
          h4.fs--1.text-black=info.name
            span.ms-2.text-400.fw-bold.fs--2.d-md-none=info.ago
          p.fs--1.mb-1.mb-md-0.text-1000!=info.text
            span.fw-bold=info.textBold
        .col-md-auto.col-12
          p.text-800.fs--1.mb-0
            span.text-400.fs--2.fw-bold.d-none.d-md-inline.me-2=info.ago
            span.me-1(class=`${info.icon}`)
            span.fw-bold=info.time 
            | #{info.date}

block content

  h2.mb-5 Notifications
  h5.text-semi-bold.text-black.mb-4 Today
  each item in today
    +NotificationItem(item)
  h5.text-semi-bold.text-black.mb-4 Yesterday
  each item in yesterday
    +NotificationItem(item)








